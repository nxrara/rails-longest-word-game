<h1>New game</h1>

<ul class="list-inline">
  <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
</ul>

<p>What's the longest word you can find?</p>
<%# action = score %>
<form class="form-inline" action="score" method="post" data-turbo="false">
 <%# to ensure POSt request is coming from my website and not another %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-control" type="text" name="score">
  <input class="btn btn-primary" type="submit" value="Play">
</form>
